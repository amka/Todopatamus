using Gtk 4.0;

template $TodoListItem : Gtk.Box {

  spacing: 8;
  margin-start: 12;
  margin-top: 12;
  margin-end: 12;
  margin-bottom: 12;

  Button completed_btn {
    icon-name: 'checkbox-symbolic';
  }

  Label summary_label {
    ellipsize: end;
    xalign: 0;
    hexpand: true;
  }

  Button favorite_btn {
    icon-name: 'non-starred-symbolic';
  }

  Button view_more_btn {
    icon-name: 'view-more-horizontal-symbolic';
  }
}